<h4>Partial for creating and updating</h4>

<%= form_with(model: @todo) do |form| %>
  <% if @todo.errors.any? %>
  <div id="error-explanation">
    <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved: </h2>
    <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>   

<div class="container"> 
    <div class="mb-2">
      <%= form.label :title, class: "form-label"%>
      <%= form.text_field :title, class: "form-control", placeholder: "New todo" %>
    </div>
    <div>
    <%= form.submit @todo.new_record? ? "Create Todo" : "Update Todo", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "Back to homepage", todos_path, class: "link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
</div>